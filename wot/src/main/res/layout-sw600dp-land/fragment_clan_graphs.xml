<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/clan_graph_charts"
            android:descendantFocusability="blocksDescendants"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:layout_marginTop="20dp">

                <android.support.v7.widget.CardView
                    android:layout_width="0dip"
                    android:layout_weight="0.48"
                    android:layout_height="wrap_content"
                    android:id="@+id/clan_graph_chart_wn8_per_tier">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/wn8_per_tier"
                            android:layout_gravity="center_horizontal" />

                        <com.github.mikephil.charting.charts.BarChart
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="250dp"
                            android:id="@+id/clan_graph_wn8_per_tier"></com.github.mikephil.charting.charts.BarChart>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <View
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_weight="0.04"></View>

                <android.support.v7.widget.CardView
                    android:layout_width="0dip"
                    android:layout_weight="0.48"
                    android:layout_height="wrap_content"
                    android:id="@+id/clan_graph_chart_wn8_per_class">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/wn8_per_class"
                            android:layout_gravity="center_horizontal" />

                        <com.github.mikephil.charting.charts.PieChart
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="250dp"
                            android:id="@+id/clan_graph_wn8_per_class"></com.github.mikephil.charting.charts.PieChart>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:layout_marginTop="20dp">

                <android.support.v7.widget.CardView
                    android:layout_width="0dip"
                    android:layout_weight="0.48"
                    android:layout_height="wrap_content"
                    android:id="@+id/clan_graph_chart_games_per_tier">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/battles_per_tier"
                            android:layout_gravity="center_horizontal" />

                        <com.github.mikephil.charting.charts.BarChart
