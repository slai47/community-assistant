                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <View
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_weight="0.04"></View>

                <android.support.v7.widget.CardView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:id="@+id/clan_graph_chart_games_per_tier8"
                    android:layout_weight="0.48">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/battles_per_tier_8"
                            android:layout_gravity="center_horizontal" />

                        <com.github.mikephil.charting.charts.HorizontalBarChart
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="250dp"
                            android:id="@+id/clan_graph_games_per_tier8"></com.github.mikephil.charting.charts.HorizontalBarChart>
                    </LinearLayout>
                </android.support.v7.widget.CardView>


            </LinearLayout>

            <!-- tier 8-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:layout_marginTop="20dp">


                <android.support.v7.widget.CardView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:id="@+id/clan_graph_chart_wn8_per_tier6"
                    android:layout_weight="0.48">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
