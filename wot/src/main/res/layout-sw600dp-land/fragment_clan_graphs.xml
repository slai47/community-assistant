                            android:layout_height="wrap_content"
                            android:minHeight="250dp"
                            android:id="@+id/clan_graph_tanks_per_tier10"></com.github.mikephil.charting.charts.HorizontalBarChart>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

