                        android:id="@+id/clan_graph_games_per_tier8"></com.github.mikephil.charting.charts.HorizontalBarChart>
                </LinearLayout>
            </android.support.v7.widget.CardView>


            <!-- tier 6-->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/clan_graph_chart_wn8_per_tier6"
