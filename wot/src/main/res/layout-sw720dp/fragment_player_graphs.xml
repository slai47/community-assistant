<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:layout_marginTop="20dp">

                <!-- CHARTS AREA -->
                <android.support.v7.widget.CardView
                    android:layout_width="0dip"
                    android:layout_weight="0.48"
                    android:layout_height="wrap_content"
                    android:id="@+id/player_graph_chart_wn8_per_tier">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/wn8_per_tier"
                            android:layout_gravity="center_horizontal" />

                        <com.github.mikephil.charting.charts.BarChart
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="250dp"
                            android:id="@+id/player_graph_wn8_per_tier"></com.github.mikephil.charting.charts.BarChart>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <View
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_weight="0.04"></View>

                <android.support.v7.widget.CardView
                    android:layout_width="0dip"
                    android:layout_weight="0.48"
                    android:layout_height="wrap_content"
                    android:id="@+id/player_graph_chart_wn8_per_class">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/wn8_per_class"
                            android:layout_gravity="center_horizontal" />

                        <com.github.mikephil.charting.charts.PieChart
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="250dp"
                            android:id="@+id/player_graph_wn8_per_class"></com.github.mikephil.charting.charts.PieChart>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:layout_marginTop="20dp">

                <android.support.v7.widget.CardView
                    android:layout_width="0dip"
                    android:layout_weight="0.48"
                    android:layout_height="wrap_content"
                    android:id="@+id/player_graph_chart_wn8_per_nation">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/player_graphs_wn8_nation"
                            android:layout_gravity="center_horizontal" />

                        <com.github.mikephil.charting.charts.HorizontalBarChart
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="250dp"
                            android:id="@+id/player_graph_wn8_per_nation"></com.github.mikephil.charting.charts.HorizontalBarChart>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <View
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_weight="0.04"></View>

                <android.support.v7.widget.CardView
                    android:layout_width="0dip"
                    android:layout_weight="0.48"
                    android:layout_height="wrap_content"
                    android:id="@+id/player_graph_chart_battles_per_tier">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/battles_per_tier"
                            android:layout_gravity="center_horizontal" />

                        <com.github.mikephil.charting.charts.BarChart
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="250dp"
                            android:id="@+id/player_graph_battles_per_tier"></com.github.mikephil.charting.charts.BarChart>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:layout_marginTop="20dp">

                <android.support.v7.widget.CardView
                    android:layout_width="0dip"
                    android:layout_weight="0.48"
                    android:layout_height="wrap_content"
                    android:id="@+id/player_graph_chart_battles_per_class">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/battles_per_class"
                            android:layout_gravity="center_horizontal" />

                        <com.github.mikephil.charting.charts.PieChart
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="250dp"
                            android:id="@+id/player_graph_battles_per_class"></com.github.mikephil.charting.charts.PieChart>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <View
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_weight="0.04"></View>

                <android.support.v7.widget.CardView
                    android:layout_width="0dip"
                    android:layout_weight="0.48"
                    android:layout_height="wrap_content"
                    android:id="@+id/player_graph_chart_battles_per_nation">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/player_graphs_battles_nation"
                            android:layout_gravity="center_horizontal" />

                        <com.github.mikephil.charting.charts.HorizontalBarChart
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="250dp"
                            android:id="@+id/player_graph_battles_per_nation"></com.github.mikephil.charting.charts.HorizontalBarChart>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:layout_marginTop="20dp">

                <android.support.v7.widget.CardView
                    android:layout_width="0dip"
                    android:layout_weight="0.48"
                    android:layout_height="wrap_content"
                    android:id="@+id/player_graph_chart_tanks_per_tier">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/player_graphs_tanks_per_tier"
                            android:layout_gravity="center_horizontal" />

                        <com.github.mikephil.charting.charts.BarChart
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="250dp"
                            android:id="@+id/player_graph_tanks_per_tier"></com.github.mikephil.charting.charts.BarChart>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <View
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_weight="0.04"></View>

                <android.support.v7.widget.CardView
                    android:layout_width="0dip"
                    android:layout_weight="0.48"
                    android:layout_height="wrap_content"
                    android:id="@+id/player_graph_chart_tanks_per_class">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/player_graphs_tanks_per_class"
                            android:layout_gravity="center_horizontal" />

                        <com.github.mikephil.charting.charts.PieChart
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="250dp"
                            android:id="@+id/player_graph_tanks_per_class"></com.github.mikephil.charting.charts.PieChart>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:layout_marginTop="20dp">

                <android.support.v7.widget.CardView
                    android:layout_width="0dip"
                    android:layout_weight="0.48"
                    android:layout_height="wrap_content"
                    android:id="@+id/player_graph_chart_tanks_per_nation">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/player_graphs_tanks_per_nation"
                            android:layout_gravity="center_horizontal" />

                        <com.github.mikephil.charting.charts.HorizontalBarChart
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="250dp"
                            android:id="@+id/player_graph_tanks_per_nation"></com.github.mikephil.charting.charts.HorizontalBarChart>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <View
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_weight="0.04"></View>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="40dp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>