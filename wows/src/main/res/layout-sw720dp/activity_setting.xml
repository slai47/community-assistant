<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.half.wowsca.ui.SettingActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:background="?attr/colorPrimary"
        android:elevation="6dp"
        android:minHeight="?attr/actionBarSize">

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1.0"
                android:layout_marginBottom="5dp"
                >
                <!-- settings area-->
                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.48"
                    >
                    <!-- settings area-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/settings"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/white" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white_transparent"
                        android:layout_marginTop="5dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/settings_theme_area"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:text="@string/settings_theme_text"
                                android:padding="10dp"
                                android:textSize="16sp"
                                android:layout_weight="0.65"
                                android:layout_gravity="center"
                                />

                            <Spinner
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:id="@+id/settings_theme_spinner"
                                android:layout_weight="0.35"
                                android:layout_gravity="center_vertical"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/settings_language_area"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:text="@string/app_language"
                                android:padding="10dp"
                                android:textSize="16sp"
                                android:layout_weight="0.65"
                                android:layout_gravity="center"
                                />

                            <Spinner
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:id="@+id/settings_language_spinner"
                                android:layout_weight="0.35"
                                android:layout_gravity="center_vertical"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/settings_server_area"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:text="@string/wargaming_server_language"
                                android:padding="10dp"
                                android:textSize="16sp"
                                android:layout_weight="0.65"
                                android:layout_gravity="center"
                                />

                            <Spinner
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:id="@+id/settings_server_spinner"
                                android:layout_weight="0.35"
                                android:layout_gravity="center_vertical"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/settings_stats_server_area"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:text="@string/search_stats_server"
                                android:padding="10dp"
                                android:textSize="16sp"
                                android:layout_weight="0.65"
                                android:layout_gravity="center"
                                />

                            <Spinner
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:id="@+id/settings_stats_server_spinner"
                                android:layout_weight="0.35"
                                android:layout_gravity="center_vertical"
                                />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/settings_ad_launch_area"
                            android:clickable="true"
                            android:layout_marginTop="10dp"
                            android:background="?attr/selectableItemBackground">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/view_an_ad_on_launch"
                                android:padding="10dp"
                                android:layout_alignParentRight="true"
                                android:textSize="16sp" />

                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/settings_ad_launch_checkbox"
                                android:layout_alignParentRight="true"
                                android:checked="false"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:clickable="false"
                                android:layout_centerVertical="true" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/settings_colorblind_area"
                            android:clickable="true"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/colorblind_mode"
                                android:padding="10dp"
                                android:layout_alignParentRight="true"
                                android:textSize="16sp" />

                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/settings_colorblind_checkbox"
                                android:layout_alignParentRight="true"
                                android:checked="false"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:clickable="false"
                                android:layout_centerVertical="true" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/settings_compare_area"
                            android:clickable="true"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/settings_show_average"
                                android:padding="10dp"
                                android:layout_alignParentRight="true"
                                android:textSize="16sp" />

                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/settings_compare_checkbox"
                                android:layout_alignParentRight="true"
                                android:checked="false"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:clickable="false"
                                android:layout_centerVertical="true" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/settings_arp_area"
                            android:clickable="true"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/settings_remove_arp_text"
                                android:padding="10dp"
                                android:layout_alignParentRight="true"
                                android:textSize="16sp" />

                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/settings_arp_checkbox"
                                android:layout_alignParentRight="true"
                                android:checked="false"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:clickable="false"
                                android:layout_centerVertical="true" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/settings_login_area"
                            android:clickable="true"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/login_primary_user"
                                android:padding="10dp"
                                android:layout_alignParentRight="true"
                                android:textSize="16sp" />

                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/settings_login_checkbox"
                                android:layout_alignParentRight="true"
                                android:checked="false"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:clickable="false"
                                android:layout_centerVertical="true" />

                        </RelativeLayout>


                    </LinearLayout>

                    <!-- App config area-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/memory_settings"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/white" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white_transparent"
                        android:layout_marginTop="5dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="@string/settings_stats_area_warning"
                            android:padding="10dp"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="@string/settings_data_points"
                            android:textSize="16sp"
                            android:padding="10dp"
                            />

                        <!--save stuff-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/settings_stats_captain_saves_area"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:text="@string/settings_saved_captain_points"
                                android:textSize="16sp"
                                android:layout_weight="0.65"
                                android:padding="5dp"
                                />
                            <Spinner
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:id="@+id/settings_stats_captain_saves_spinner"
                                android:layout_weight="0.35"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/settings_stats_ships_saves_area"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:text="@string/settings_saved_ships_points"
                                android:textSize="16sp"
                                android:padding="5dp"
                                android:layout_weight="0.65"
                                />

                            <Spinner
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:id="@+id/settings_stats_ships_saves_spinner"
                                android:layout_weight="0.35"
                                />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/settings_clear_players_area"
                            android:clickable="true"
                            android:layout_marginTop="10dp"
                            android:padding="8dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/settings_clean_player"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="2dp"
                                android:id="@+id/info_clear_players_top_text"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/settings_clear_player_info"
                                android:layout_marginLeft="10dp"
                                android:layout_below="@+id/info_clear_players_top_text"
                                android:layout_alignParentRight="true"
                                android:textSize="12sp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/settings_clear_saved_data"
                            android:clickable="true"
                            android:padding="8dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/settings_refresh_stored_data"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="2dp"
                                android:id="@+id/info_clear_data"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/settings_refresh_stored_data_info"
                                android:layout_marginLeft="10dp"
                                android:layout_below="@+id/info_clear_data"
                                android:layout_alignParentRight="true"
                                android:textSize="12sp" />
                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.04"
                    />

                <!-- about-->
                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.48"
                    >

                    <!-- about-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/white"
                        android:text="@string/about"
                        android:layout_marginLeft="5dp"

                        />

                    <View
                        android:layout_height="1dp"
                        android:layout_width="match_parent"
                        android:background="@color/white_transparent"
                        android:layout_marginTop="5dp"></View>


                    <androidx.gridlayout.widget.GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        grid:alignmentMode="alignBounds"
                        grid:columnCount="@integer/settings_col"
                        android:layout_margin="10dp"
                        grid:rowOrderPreserved="false"
                        grid:useDefaultMargins="true">

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/settings_version_area"
                            android:clickable="true"
                            grid:layout_columnWeight="1"
                            grid:layout_gravity="fill_horizontal"
                            >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_version"
                                android:id="@+id/settings_version_iv"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/version"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="3dp"
                                android:layout_gravity="center"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textSize="12sp"
                                android:id="@+id/settings_verison"
                                android:layout_gravity="center"/>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="0dip"
                            android:id="@+id/settings_review"
                            android:orientation="vertical"
                            android:clickable="true"
                            grid:layout_columnWeight="1"
                            grid:layout_gravity="fill_horizontal">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_star"
                                android:id="@+id/settings_review_iv"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/settings_write_a_review"
                                android:padding="10dp"
                                android:layout_gravity="center"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="0dip"
                            android:id="@+id/settings_contact"
                            android:orientation="vertical"
                            android:clickable="true"
                            grid:layout_columnWeight="1"
                            grid:layout_gravity="fill_horizontal">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_email"
                                android:id="@+id/settings_contact_iv"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/settings_contact_me"
                                android:padding="10dp"
                                android:layout_gravity="center"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="0dip"
                            android:id="@+id/settings_twitter"
                            android:orientation="vertical"
                            android:clickable="true"
                            grid:layout_columnWeight="1"
                            grid:layout_gravity="fill_horizontal">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_twitter"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/settings_twitter"
                                android:layout_gravity="center"
                                android:padding="10dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="0dip"
                            android:id="@+id/settings_wordpress"
                            android:orientation="vertical"
                            android:clickable="true"
                            grid:layout_columnWeight="1"
                            grid:layout_gravity="fill_horizontal">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_developerpagelauncher"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/settings_dev_blog"
                                android:layout_gravity="center"
                                android:padding="10dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="0dip"
                            android:id="@+id/settings_wot"
                            android:orientation="vertical"
                            android:clickable="true"
                            grid:layout_columnWeight="1"
                            grid:layout_gravity="fill_horizontal">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:src="@drawable/wot_web_hi_res_512"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="WoT\nCommunity\nAssistant"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:padding="10dp" />
                        </LinearLayout>

                    </androidx.gridlayout.widget.GridLayout>

                    <!-- glossary-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/white"
                        android:text="@string/settings_glossary"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"

                        />

                    <View
                        android:layout_height="1dp"
                        android:layout_width="match_parent"
                        android:background="@color/white_transparent"
                        android:layout_marginTop="3dp"></View>

                    <include layout="@layout/snippet_settings_glossar" />

                    <!-- attribution area-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/settings_att"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/white" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white_transparent"
                        android:layout_marginTop="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:id="@+id/attribution_text"
                        android:layout_margin="10dp"
                        android:text="@string/attribution_text" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_margin="10dp"
                        android:text="@string/translated_by" />
                </LinearLayout>
            </LinearLayout>



        </LinearLayout>
    </ScrollView>

</LinearLayout>
