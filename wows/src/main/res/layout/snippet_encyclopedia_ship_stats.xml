                android:textColor="@color/white"
                android:layout_marginTop="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                android:layout_marginTop="2dp"
                android:id="@+id/encyclopedia_gun_dispersion" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/encyclopedia_range_torps_text"
                android:text="@string/encyclopedia_torp_range"
                android:textColor="@color/white"
                android:layout_marginTop="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                android:layout_marginTop="2dp"
                android:id="@+id/encyclopedia_range_torps" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/encyclopedia_torps_speed_text"
                android:text="@string/encyclopedia_torp_speed"
                android:textColor="@color/white"
                android:layout_marginTop="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                android:layout_marginTop="2dp"
                android:id="@+id/encyclopedia_torps_speed" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/encyclopedia_range_secondaries_text"
                android:text="@string/encyclopedia_secondary_range"
                android:textColor="@color/white"
                android:layout_marginTop="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                android:layout_marginTop="2dp"
                android:id="@+id/encyclopedia_range_secondaries" />

            <TextView
