                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/encyclopedia_number_of_guns_text"
                android:text="@string/encyclopedia_num_guns"
                android:textColor="@color/white"
                android:layout_marginTop="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                android:layout_marginTop="2dp"
                android:id="@+id/encyclopedia_number_of_guns" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/encyclopedia_number_of_torps_text"
                android:text="@string/encyclopedia_num_torps"
                android:textColor="@color/white"
                android:layout_marginTop="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                android:layout_marginTop="2dp"
                android:id="@+id/encyclopedia_number_of_torps" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
