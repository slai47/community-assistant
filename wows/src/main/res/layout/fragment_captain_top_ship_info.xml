                                android:id="@+id/captain_details_torps_ship_number"
                                android:layout_alignBottom="@+id/captain_details_torps_ship_icon"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true" />

                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!-- Aircraft-->
